<!--pages/post/post.wxml-->
<view>

    <swiper style="width:100%;height:400rpx" indicator-dots='true' autoplay='true' interval='3000' circular='true'>
      <swiper-item>
        <image src="/images/swiper1.jpg" style="width:100%;height:100%"></image>
      </swiper-item>
      <swiper-item><image src="/images/swiper2.jpg"></image></swiper-item>
      <swiper-item><image src="/images/swiper3.jpg"></image></swiper-item>
    </swiper>

    <view class="post-container">
      <view class="post-author-date">
        <image class="headimg" src="{{author_img}}"></image>
        <text class="post-date">{{date}}</text>
      </view>
      <image class="post-image" src="{{content_img}}"></image>
      <text class="post-content">{{content}}</text>
      <view class="post-record">
        <image class="icon" src="{{collect_img}}"></image>
        <text class="count">{{collect_count}}</text>
        <image class="icon" src="{{view_img}}"></image>
        <text class="count">{{view_count}}</text>
      </view>
    </view>



</view>
