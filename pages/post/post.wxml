<!--pages/post/post.wxml-->
<view>

    <swiper style="width:100%;height:400rpx" indicator-dots='true' autoplay='true' interval='3000' circular='true'>
      <swiper-item>
        <image src="/images/swiper1.jpg" style="width:100%;height:100%"></image>
      </swiper-item>
      <swiper-item><image src="/images/swiper2.jpg"></image></swiper-item>
      <swiper-item><image src="/images/swiper3.jpg"></image></swiper-item>
    </swiper>

  <block wx:for="{{post_key}}" wx:for-item="it">
    <view class="post-container">
      <view class="post-author-date">
        <image class="headimg" src="{{it.author_img}}"></image>
        <text class="post-date">{{it.date}}</text>
      </view>
      <image class="post-image" src="{{it.content_img}}"></image>
      <text class="post-content">{{it.content}}</text>
      <view class="post-record">
        <image class="icon" src="{{it.collect_img}}"></image>
        <text class="count">{{it.collect_count}}</text>
        <image class="icon" src="{{it.view_img}}"></image>
        <text class="count">{{it.view_count}}</text>
      </view>
    </view>
  </block>


</view>
