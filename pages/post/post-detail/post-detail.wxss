/* pages/post/post-detail/post-detail.wxss */
#container{
  display: flex;
  flex-direction: column;
}

#pic{
  width: 100%;
  height: 460rpx;
}

.playimg{
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -55rpx;
  top: 180rpx;
  opacity: 0.9;
}

#author-date{
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

#avator{
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  vertical-align: middle;
}

#author{
  font-size:30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
  vertical-align: middle;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}

#date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
  vertical-align: middle;
}

.title{
  margin-left: 40rpx;
  font-size: 35rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool{
  margin-top: 20rpx;
}

.iconView{
  float:right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.icon{
  height: 40rpx;
  width: 40rpx;
  margin-left: 40rpx;
  
}

#splitLine{
  width: 660rpx;
  height:1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 23rpx;
  margin: 0 auto;
  z-index: -100;
}

#content{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  text-indent: 2em;
}

