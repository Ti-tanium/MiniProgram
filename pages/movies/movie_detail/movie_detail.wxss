/* pages/movies/movie_detail/movie_detail.wxss */
@import '/pages/movies/stars_template/stars.wxss';

.movie-detail-container {
  background-color: #f2f2f2;
}

.main-title {
  margin-left: 40rpx;
  color: #fff;
  font-size: 19px;
  font-weight: bold;
  margin-top: 50rpx;
  letter-spacing: 2px;
}

.sub-title {
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.movie-container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.stastics {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.hightlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-left: 40rpx;
}

.plain-font {
  font-size: 22rpx;
  color: #666;
  margin-left: 20rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.mark {
  color: #999;
  margin-right: 30rpx;
  /* white-space: nowrap; */
}

.originalTitle {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
}

.comment {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}

#brief-prompt {
  display: block;
  margin-bottom: 30rpx;
}

.brief-introduction {
  line-height: 40rpx;
  letter-spacing: 1px;
}

.content-block {
  background-color: #fff;
  padding-top: 40rpx;
  padding-right: 50rpx;
  padding-bottom: 50rpx;
  padding-left: 50rpx;
  margin-bottom: 1px;
}

.casts-img{
  white-space: nowrap;
}

.cast-img {
  height: 210rpx;
  width: 170rpx;
  padding: 0 10rpx;
}

.cast-name{
  margin-top: 10rpx;
  color: #999;
}

.cast-member {  
  width: 190rpx;
  margin-top: 40rpx;
  margin-right: 40rpx;
  text-align: center;
  white-space: normal;
  display: inline-flex;
  flex-direction: column;
}

#summary {
  color: red;
}
